<?xml version="1.0"?>
<module>
	<title>UI: Compressor</title>
	<description><![CDATA[
Increases performance of web applications by reducing HTTP requests and traffic.
Extends page components to collect JavaScript and Stylesheet files by combination and compression.
]]></description>
	<category>User Interface</category>
	<version>0.1</version>
	<company site="http://ceusmedia.de/">Ceus Media</company>
	<author email="christian.wuerker@ceusmedia.de">Christian WÃ¼rker</author>
	<license source="http://www.gnu.org/licenses/gpl-3.0.txt">GPL 3</license>
	<files>
		<class>JSMin.php5</class>
	</files>
	<config type="string" name="jsCachePath"></config>
	<config type="boolean" name="jsMinify"></config>
	<config type="string" name="jsPrefix">min.</config>
	<config type="string" name="jsSuffix">.js</config>
	<config type="string" name="cssCachePath"></config>
	<config type="boolean" name="cssMinify"></config>
	<config type="string" name="cssPrefix">min.</config>
	<config type="string" name="cssSuffix">.css</config>
	<relations/>
	<hook type="resource" resource="Page" event="applyModules"><![CDATA[
$config = (object) $env->getConfig()->getAll( 'module.ui_compressor.' );
$context->js->setPrefix( $config->jsPrefix );
$context->js->setSuffix( $config->jsSuffix );
$pathCache	= $config->jsCachePath ? $config->jsCachePath : $env->getConfig()->get( 'path.cache' );
$context->js->setCachePath( $pathCache );
$context->js->setCompression( $config->jsMinify );
$context->setPackaging( FALSE, $config->cssMinify );
]]></hook>
	<hook type="resource" resource="Page" event="prefilter"><![CDATA[
//die("UI:Compressor: Hook called on event Page@prefilter");
	]]></hook>
</module>
