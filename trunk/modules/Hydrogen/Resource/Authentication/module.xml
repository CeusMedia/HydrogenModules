<?xml version="1.0"?>
<module>
	<title>Resource: Authentication</title>
	<description><![CDATA[Module for authentication against local database using the Users module.]]></description>
	<version>0.5.11</version>
	<log version="0.1">Initial prototype.</log>
	<log version="0.2">Separation to Hydrogen module.</log>
	<log version="0.3">Added text block support for every page (german only).</log>
	<log version="0.4">Added support for HTTP basic authentication.</log>
	<log version="0.4.1">Added support for password salt.</log>
	<log version="0.5">Refactored JavaScript for auto logout and session refresh.</log>
	<log version="0.5.1">Made session refresh and its interval (in seconds) configurable.</log>
	<log version="0.5.2">Made auto logout and its timeout (in seconds) configurable.</log>
	<log version="0.5.3">Allow user configuration to configure auto logout.</log>
	<log version="0.5.4">Added AJAX method to check username existance (used on registration).</log>
	<log version="0.5.5">Added support to forward to a controller action on logout.</log>
	<log version="0.5.6">Fixed logout loop.</log>
	<log version="0.5.7">Force to reload page if session refresh indicates expired server session.</log>
	<log version="0.5.8">Updated registration form for error handling or preset information.</log>
	<log version="0.5.9">Provide current user ID to Auth script on init by hook.</log>
	<log version="0.5.10">Let the framework run the initial JavaScript code.</log>
	<log version="0.5.11">Moved HTML files to subfolders.</log>
	<company site="http://ceusmedia.de/">Ceus Media</company>
	<author email="christian.wuerker@ceusmedia.de">Christian Würker</author>
	<license source="http://www.gnu.org/licenses/gpl-3.0.txt">GPL 3</license>
	<files>
		<class>Controller/Auth.php5</class>
		<class>Mail/Auth/Register.php5</class>
<!--		<class>Mail/Auth/Password.php5</class>-->
		<class>View/Auth.php5</class>
		<class>BasicAuthentication.php5</class>
		<template>auth/confirm.php</template>
		<template>auth/login.php</template>
		<template>auth/password.php</template>
		<template>auth/register.php</template>
		<locale>de/auth.ini</locale>
		<locale>de/html/auth/confirm/top.html</locale>
		<locale>de/html/auth/confirm/info.html</locale>
		<locale>de/html/auth/confirm/bottom.html</locale>
		<locale>de/html/auth/login/top.html</locale>
		<locale>de/html/auth/login/info.html</locale>
		<locale>de/html/auth/login/bottom.html</locale>
		<locale>de/html/auth/password/top.html</locale>
		<locale>de/html/auth/password/info.html</locale>
		<locale>de/html/auth/password/bottom.html</locale>
		<locale>de/html/auth/register/top.html</locale>
		<locale>de/html/auth/register/info.html</locale>
		<locale>de/html/auth/register/bottom.html</locale>
		<locale>de/html/auth/tac.html</locale>
		<locale>en/auth.ini</locale>
		<locale>en/html/auth/login/info.html</locale>
		<locale>en/html/auth/tac.html</locale>
		<script load="auto">Auth.js</script>
	</files>
	<config protected="user" type="boolean" name="session.refresh">yes</config>
	<config protected="no" type="integer" name="session.refresh.minutes">10</config>
	<config protected="user" type="boolean" name="logout.auto">yes</config>
	<config protected="user" type="integer" name="logout.auto.minutes">30</config>
	<config protected="no" type="string" name="logout.auto.forward.controller"></config>
	<config protected="no" type="string" name="logout.auto.forward.action"></config>
	<config protected="yes" type="boolean" name="logout.clearSession">1</config>
	<relations>
		<needs type="module">Resource_Users</needs>
		<needs type="module">Resource_Mail</needs>
		<needs type="module">UI_Helper_HTML</needs>
	</relations>
	<link xml:lang="de" rank="10" access="outside" path="auth/login">Login</link>
	<link xml:lang="de" rank="11" access="outside" path="auth/password">Passwort</link>
	<link xml:lang="de" rank="12" access="outside" path="auth/register">Registrieren</link>
	<link xml:lang="de" rank="13" access="outside" path="auth/confirm">Konto bestätigen</link>
	<link xml:lang="de" rank="99" access="inside" path="auth/logout">Logout</link>
	<link xml:lang="en" rank="10" access="outside" path="auth/login">Login</link>
	<link xml:lang="en" rank="11" access="outside" path="auth/password">Password</link>
	<link xml:lang="en" rank="12" access="outside" path="auth/register">Rgister Account</link>
	<link xml:lang="en" rank="13" access="outside" path="auth/confirm">Confirm Account</link>
	<link xml:lang="en" rank="99" access="inside" path="auth/logout">Logout</link>
	<link rank="99" access="public" path="auth/ajaxIsAuthenticated"></link>
	<link rank="99" access="public" path="auth/ajaxRefreshSession"></link>
	<link rank="99" access="public" path="auth/ajaxUsernameExists"></link>
	<hook type="resource" resource="Page" event="applyModules">Controller_Auth::___onPageApplyModules</hook>
</module>

