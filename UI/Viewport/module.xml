<?xml version="1.0"?>
<module>
	<title>UI: Viewport</title>
	<description><![CDATA[Set meta tags for limited viewports.]]></description>
	<category>User Interface</category>
	<version>0.2</version>
	<log version="0.1">Initial prototype.</log>
	<log version="0.2">Separated to Hydrogen module.</log>
	<company site="http://ceusmedia.de/">Ceus Media</company>
	<author email="christian.wuerker@ceusmedia.de">Christian W&#xFC;rker</author>
	<license source="http://www.gnu.org/licenses/gpl-3.0.txt">GPL 3</license>
	<files/>
	<config protected="no" type="boolean" name="enabled">1</config>
	<hook type="resource" resource="Page" event="applyModules"><![CDATA[
		$config	= $env->getConfig();
		if( $config->get( 'module.ui_viewport.enabled' ) ){
			$context->addMetaTag( 'name', 'viewport', 'width=device-width, initial-scale=1.0, user-scalable=no' );
		}
]]></hook>
</module>
