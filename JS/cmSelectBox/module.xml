<?xml version="1.0"?>
<module>
	<title>JS: cmSelectBox</title>
	<description><![CDATA[Replacement for HTML selects.]]></description>
	<category>JavaScript</category>
	<version>0.2.2</version>
	<log version="0.1">Initial prototype.</log>
	<log version="0.2">Separation to Hydrogen module.</log>
	<log version="0.2.1">Support inverted mode (show options above input).</log>
	<log version="0.2.2">Move style files from theme to common.</log>
	<company site="http://ceusmedia.de/">Ceus Media</company>
	<author email="christian.wuerker@ceusmedia.de">Christian W&#xFC;rker</author>
	<license source="http://www.gnu.org/licenses/gpl-3.0.txt">GPL 3</license>
	<files>
		<script source="local" load="auto">cmSelectBox-0.1.js</script>
		<style source="common" load="auto">cmSelectBox-0.1.css</style>
		<image source="theme">bg_select_arrow.png</image>
		<image source="theme">bg_select_arrow.psd</image>
	</files>
	<relations>
		<needs type="module">JS_jQuery</needs>
	</relations>
	<hook type="resource" resource="Page" event="applyModules"><![CDATA[
		$options	= array();
		$script		= '$("select.cmSelectBox.above").cmSelectBox('.json_encode( array_merge( $options, array( 'inverted' => TRUE ) ) ).')';
		$context->js->addScriptOnReady( $script );

		$script		= '$("select.cmSelectBox").not(".above").cmSelectBox('.json_encode( $options ).')';
		$context->js->addScriptOnReady( $script );
	]]></hook>
</module>
